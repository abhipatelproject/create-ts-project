{
  "name": "@jtbennett/ts-project-scripts",
  "version": "1.0.0-beta3",
  "keywords": [
    "typescript",
    "monorepo",
    "create",
    "project"
  ],
  "description": "Scripts for Create Typescript Project.",
  "author": "John Bennett <john@jtbennett.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/jtbennett/create-ts-project.git",
    "directory": "packages/ts-project-scripts"
  },
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": {
    "url": "https://github.com/jtbennett/create-ts-project/issues"
  },
  "files": [
    "lib/**/*",
    "templates/**/*"
  ],
  "bin": {
    "tsp": "./lib/index.js"
  },
  "types": "lib/index.d.ts",
  "scripts": {
    "dev": "yarn build && ts-node ./src/index.ts",
    "lint": "eslint ./src --ext .ts --env node",
    "test": "jest --passWithNoTests --config ../../config/jest.config.js --rootDir ./",
    "clean": "rimraf ./lib tsconfig.tsBuildInfo",
    "build": "tsc --build && chmod +x ./lib/index.js",
    "verify": "yarn lint --max-warnings 0 && yarn test && yarn clean && yarn build"
  },
  "dependencies": {
    "@jtbennett/ts-project-cli-utils": "1.0.0-beta1",
    "chalk": "^4.0.0",
    "fs-extra": "^9.0.0",
    "semver": "7.3.2",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.0",
    "@types/node": "^12.7.8",
    "@types/rimraf": "^2.0.2",
    "@types/semver": "5.5.0",
    "@types/yargs": "^15.0.0",
    "eslint": "^6.8.0",
    "jest": "24.9.0",
    "rimraf": "^3.0.0",
    "ts-node": "^8.10.1",
    "typescript": "~3.8.3"
  }
}