{
  "name": "node-server",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "unlicensed",
  "engines": {
    "node": ">=12.0.0"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": ["lib/**/*"],
  "scripts": {
    "dev": "concurrently -k -n 'tsc,app' -c 'cyan,green' 'tsc --build --watch --preserveWatchOutput' 'nodemon'",
    "lint": "eslint ./src --ext .ts --env node",
    "test": "jest --passWithNoTests --config ../../config/jest.config.js --rootDir ./",
    "clean": "rimraf ./lib ./tsconfig.tsBuildInfo",
    "build": "tsc --build",
    "verify": "yarn test && yarn clean && yarn build && yarn lint --max-warnings 0",
    "purge": "yarn clean && rimraf ./coverage ./node_modules"
  },
  "nodemonConfig": {
    "exec": "ts-node ./src/index.ts --files",
    "ext": "ts,json",
    "ignore": ["./src/jest", "./src/**/*.test.ts", "./src/**/__mocks__"],
    "watch": [
      ".env",
      "./src",
      "./tsconfig.json",
      "../../config/tsconfig.node.json"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^12.7.8",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "jest": "24.9.0",
    "nodemon": "^2.0.3",
    "rimraf": "^3.0.0",
    "ts-node": "^8.10.1",
    "typescript": "~3.8.3"
  }
}
