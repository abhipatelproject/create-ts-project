{
  "name": "node-server",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "unlicensed",
  "engines": {
    "node": ">=12.0.0"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": ["lib/**/*"],
  "scripts": {
    "dev": "yarn build && concurrently -i -k -n 'app,tsc' -c 'green,cyan' 'nodemon' 'nodemon --config ../../config/nodemon.server.tsc.json'",
    "lint": "eslint ./src --ext .ts --env node",
    "test": "jest --passWithNoTests --rootDir ./",
    "clean": "rimraf ./lib ./tsconfig.tsBuildInfo",
    "build": "tsc --build ./tsconfig.build.json",
    "verify": "yarn test && yarn clean && yarn build && yarn lint --max-warnings 0",
    "purge": "yarn clean && rimraf ./coverage ./node_modules"
  },
  "nodemonConfig": {
    "exec": "ts-node ./src/index.ts --files",
    "delay": "1000",
    "ext": "ts,json",
    "ignore": ["./src/jest", "./src/**/*.test.ts", "./src/**/__mocks__"],
    "watch": [
      ".env",
      "./package.json",
      "./src",
      "./tsconfig.build.json",
      "../../config/tsconfig.node.json"
    ]
  },
  "dependencies": {
    "express": "4.17.1"
  },
  "devDependencies": {
    "@types/express": "4.17.6",
    "@types/node": "^12.7.8",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "jest": "24.9.0",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.0",
    "ts-node": "^8.10.1",
    "typescript": "~3.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["<rootDir>/src/**/*.test.ts"]
  }
}
